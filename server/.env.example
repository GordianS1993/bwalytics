# Environment Variables für BWA-Dashboard

# Server Konfiguration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Datenbank (PostgreSQL für Produktion, SQLite für Entwicklung)
DATABASE_URL="file:./dev.db"
# DATABASE_URL="postgresql://username:password@localhost:5432/bwa_dashboard"

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# OpenAI API für KI-Empfehlungen
OPENAI_API_KEY=your_openai_api_key_here

# File Upload Konfiguration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email Konfiguration (optional für Benachrichtigungen)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# BWA Parsing Konfiguration
PDF_PARSER_TIMEOUT=30000
BWA_TEMPLATE_STRICTNESS=medium

# Scoring Algorithmus
SCORING_WEIGHTS_LIQUIDITY=0.3
SCORING_WEIGHTS_PROFITABILITY=0.4
SCORING_WEIGHTS_STABILITY=0.3

# Cache Konfiguration
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379